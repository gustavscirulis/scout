{
  "name": "scout",
  "private": true,
  "version": "0.1.0",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run start-electron\"",
    "build": "npm run build-electron && vite build && electron-builder",
    "build-electron": "tsc --sourceMap false -p electron",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start-electron": "tsc --sourceMap false -p electron && electron ."
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@phosphor-icons/react": "^2.1.7",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/themes": "^3.0.0",
    "@types/node": "^20.11.0",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^10.0.1",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "wait-on": "^7.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@shadcn/ui": "^0.0.4",
    "@types/canvas-confetti": "^1.9.0",
    "@types/electron": "^1.6.10",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-dom": "^1.38.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-react-x": "^1.38.4",
    "globals": "^13.24.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.electron.scout",
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "dmg": {
      "writeUpdateInfo": false,
      "sign": false
    }
  }
}
